<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/mainIcon2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/whatsapp" />

    <EditText
        android:id="@+id/userEmail2"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#2E2D2D"
        android:ems="10"
        android:hint="Email / Phone"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/ic_email"/>

    <EditText
        android:id="@+id/userPassword2"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#2E2D2D"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_lock"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="20dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="Click for sign up"
            android:textColor="#393636"
            android:textSize="13dp">

        </TextView>

    </LinearLayout>

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:text="Sign in"
        app:cornerRadius="4dp" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/googleBtn2"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:drawableLeft="@drawable/ic_google"
            android:text="Google"
            app:cornerRadius="4dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:gravity="right">


            <Button
                android:id="@+id/fbBtn2"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:text="Facebook"
                app:cornerRadius="4dp"
                android:drawableLeft="@drawable/ic_facebook"
                android:layout_marginRight="20dp"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="Sign Up with Phone"
            android:textColor="#393636"
            android:textSize="17dp">

        </TextView>

    </LinearLayout>


</LinearLayout>